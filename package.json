{
  "name": "chalk-animation",
  "description": "Colorful animations in terminal output",
  "version": "1.6.0",
  "author": "Boris K",
  "bin": "./cli.js",
  "bugs": "https://github.com/bokub/chalk-animation/issues",
  "dependencies": {
    "chalk": "^2.3.2",
    "gradient-string": "^1.1.0",
    "meow": "^10.1.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "codecov": "^3.0.0",
    "nyc": "^15.1.0",
    "xo": "^0.48.0"
  },
  "engines": {
    "node": ">=4"
  },
  "homepage": "https://github.com/bokub/chalk-animation",
  "keywords": [
    "animation",
    "chalk",
    "cli",
    "color",
    "colors",
    "colour",
    "command-line",
    "console",
    "formatting",
    "gradient",
    "log",
    "logging",
    "rainbow",
    "shell",
    "string",
    "style",
    "styles",
    "terminal"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": "bokub/chalk-animation",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "xo && nyc ava --serial"
  },
  "xo": {
    "rules": {
      "ava/assertion-arguments": 0,
      "ava/no-unknown-modifiers": 0,
      "comma-dangle": 0,
      "node/prefer-global/process": 0,
      "operator-linebreak": 0,
      "padding-line-between-statements": 0,
      "quotes": 0,
      "unicorn/no-this-assignment": 0,
      "unicorn/prefer-includes": 0,
      "unicorn/prefer-module": 0,
      "unicorn/prefer-number-properties": 0,
      "unicorn/prefer-string-slice": 0,
      "unicorn/prevent-abbreviations": 0
    }
  }
}
