{
  "name": "chalk-animation",
  "version": "2.0.3",
  "description": "Colorful animations in terminal output",
  "keywords": [
    "animation",
    "chalk",
    "cli",
    "color",
    "colors",
    "colour",
    "command-line",
    "console",
    "formatting",
    "gradient",
    "log",
    "logging",
    "rainbow",
    "shell",
    "string",
    "style",
    "styles",
    "terminal"
  ],
  "homepage": "https://github.com/bokub/chalk-animation",
  "bugs": "https://github.com/bokub/chalk-animation/issues",
  "repository": "bokub/chalk-animation",
  "license": "MIT",
  "author": "Boris K",
  "type": "module",
  "main": "index.js",
  "bin": "./cli.js",
  "files": [
    "cli.js",
    "index.js"
  ],
  "scripts": {
    "audit": "npx upgradeps -v",
    "coverage": "c8 report --reporter=text-lcov > coverage.lcov",
    "fix": "xo --fix",
    "lint": "xo",
    "prepare": "husky install",
    "sort": "npx sort-package-json",
    "test": "c8 ava --serial"
  },
  "xo": {
    "rules": {
      "comma-dangle": "off",
      "operator-linebreak": "off",
      "prefer-destructuring": "off",
      "prefer-rest-params": "off",
      "padding-line-between-statements": "off",
      "unicorn/no-this-assignment": "off",
      "unicorn/prefer-includes": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-string-slice": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "dependencies": {
    "chalk": "^5.1.2",
    "gradient-string": "^2.0.2",
    "meow": "^11.0.0"
  },
  "devDependencies": {
    "ava": "^5.0.1",
    "c8": "^7.12.0",
    "husky": "^8.0.2",
    "xo": "^0.52.4"
  },
  "engines": {
    "node": ">=12"
  }
}
